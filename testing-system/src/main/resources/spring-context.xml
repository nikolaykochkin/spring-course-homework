<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="quizDao" class="org.example.dao.QuizDaoCsv">
        <constructor-arg name="path" value="quizzes.csv"/>
    </bean>

    <bean id="quizService" class="org.example.service.QuizServiceImpl">
        <constructor-arg name="quizDao" ref="quizDao"/>
    </bean>

    <bean id="testingService" class="org.example.service.TestingServiceImpl">
        <constructor-arg name="quizService" ref="quizService"/>
        <constructor-arg name="out" value="#{ T(java.lang.System).out}"/>
        <constructor-arg name="in" value="#{ T(java.lang.System).in}"/>
    </bean>
</beans>